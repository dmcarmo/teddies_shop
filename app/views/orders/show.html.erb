<div class="container">
  <div class="row py-4">
    <div class="col">
      <h1>Order #<%= @order.id %> <small><span class="badge badge-primary"><%= @order.state %></span></small></h1>
      <h3><strong>ISSUED ON</strong> <%= @order.created_at.to_date %></h3>
      <ul class="list-unstyled">
        <% @order.line_items.each do |item| %>
          <li><strong><%=item.quantity%> x <%= item.product.name %></strong> for <strong><%= humanized_money_with_symbol(item.product.price_cents) %></strong></li>
          <li><strong>TOTAL: N/A</strong></li>
        <% end %>
      </ul>
      <p>Estimated delivery in <strong>2 business days</strong></p>
    </div>
  </div>
</div>